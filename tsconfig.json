{
    "compilerOptions": {
      "target": "es2022",
      "module": "commonjs",
      "baseUrl": "src",
      "paths": {
        // "*": [
            // "*"
        // ],
          "@middlewares/*": ["middlewares/*"],
          "@useCases/*": ["useCases/*"],
          "@repositories/*": ["repositories/*"],
          "@shared/*": ["shared/*"],
          "@routes/*": ["routes/*"],
          "@infra/*": ["infra/*"],
          "@tests/*": ["tests/*"],
          "adapters/*": ["adapters/*"],
          "application/*": ["application/*"],
          "config/*": ["config/*"],
          "errors/*": ["errors/*"],
          "helpers/*": ["helpers/*"],
          "models/*": ["models/*"],
          "services/*": ["services/*"],
          "ports/*": ["ports/*"],
          "domain/*": ["domain/*"],

      },
      "outDir": "./build",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
   }
  }
  